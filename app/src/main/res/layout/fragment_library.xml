<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40CCE7D4"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/libText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="라이브러리"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:background="#92CFA5" />

    <HorizontalScrollView
        android:id="@+id/libBtn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/lib_lowerBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textColor="#478C5C"
                android:textStyle="bold"
                android:background="@drawable/box_unclick"
                android:text="하체" />

            <Button
                android:id="@+id/lib_chest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textColor="#478C5C"
                android:textStyle="bold"
                android:background="@drawable/box_unclick"
                android:text="가슴" />

            <Button
                android:id="@+id/lib_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textColor="#478C5C"
                android:textStyle="bold"
                android:background="@drawable/box_unclick"
                android:text="등" />

            <Button
                android:id="@+id/lib_shoulder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textColor="#478C5C"
                android:textStyle="bold"
                android:background="@drawable/box_unclick"
                android:text="어깨" />

            <Button
                android:id="@+id/lib_arm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textColor="#478C5C"
                android:textStyle="bold"
                android:background="@drawable/box_unclick"
                android:text="팔" />
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/searchView"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:ems="17"
            android:gravity="center_vertical"
            android:hint="찾으시는 운동이 있으신가요?"
            android:background="@android:color/transparent"
            android:textColorHint="#50000000"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <Button
            android:id="@+id/searchBtn"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_box"
            android:text="검색"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#478c5c"
        android:layout_marginHorizontal="20dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lib_recycle_lowerbody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:visibility="visible"
        android:layout_weight="0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lib_recycle_chest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_weight="0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lib_recycle_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_weight="0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lib_recycle_shoulder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_weight="0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lib_recycle_arm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_weight="0" />

</LinearLayout>