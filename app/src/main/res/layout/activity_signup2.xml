<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/img_signupbackground"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:gravity="center"
            android:paddingVertical="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#92CFA5">
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"
                android:textSize="25sp"
                android:textColor="#fff"/>
            <ImageView
                android:layout_marginRight="20dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_close"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:paddingHorizontal="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="60dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/img_progressbar2"/>
            <TextView
                android:textFontWeight="700"
                android:textSize="20sp"
                android:lineHeight="22dp"
                android:textColor="#000"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="계정 정보 입력"/>
            <EditText
                android:id="@+id/id_et"
                android:textColor="#000"
                android:backgroundTint="#478C5C"
                android:drawableLeft="@drawable/img_loginuser"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginBottom="40dp"
                android:drawablePadding="20dp"
                android:hint="이메일"
                android:textFontWeight="700"
                android:textSize="20sp"
                android:textColorHint="#ccc"
                android:paddingLeft="15dp"/>
            <EditText
                android:inputType="textPassword"
                android:id="@+id/pw_et"
                android:textColor="#000"
                android:backgroundTint="#478C5C"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:drawableLeft="@drawable/img_loginpw"
                android:drawablePadding="20dp"
                android:hint="비밀번호"
                android:textFontWeight="700"
                android:textSize="20sp"
                android:layout_marginBottom="40dp"
                android:textColorHint="#ccc"
                android:paddingLeft="15dp"/>
            <EditText
                android:inputType="textPassword"
                android:id="@+id/pw_certification_et"
                android:textColor="#000"
                android:backgroundTint="#478C5C"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:drawableLeft="@drawable/img_loginpw"
                android:drawablePadding="20dp"
                android:hint="비밀번호 확인"
                android:textFontWeight="700"
                android:textSize="20sp"
                android:textColorHint="#ccc"
                android:paddingLeft="15dp"/>
            <TextView
                android:layout_marginTop="21dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textFontWeight="700"
                android:text="영문, 숫자, 특수문자를 포함한 8자 이상을 입력해주세요!"
                android:textColor="#000"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pwErrorBox"
            android:background="@drawable/signuperrorbackground"
            android:padding="5dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/img_error"/>
            <TextView
                android:layout_gravity="center"
                android:textFontWeight="700"
                android:textSize="15sp"
                android:id="@+id/erroMsg"
                android:textColor="#E1512E"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호가 일치하지 않습니다!"/>
        </LinearLayout>
        <Button
            android:enabled="false"
            android:id="@+id/moveSignup"
            android:background="#CCE7D4"
            android:textColor="#fff"
            android:gravity="center"
            android:textFontWeight="700"
            android:textSize="20sp"
            android:lineHeight="22sp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="다음"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>