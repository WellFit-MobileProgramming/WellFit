<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/img_signupbackground"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:gravity="center"
            android:paddingVertical="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#92CFA5">
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"
                android:textSize="25sp"
                android:textColor="#fff"/>
            <ImageView
                android:layout_marginRight="20dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_close"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:paddingHorizontal="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="60dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_progressbar1"/>
                    <TextView
                        android:textFontWeight="700"
                        android:textSize="20sp"
                        android:lineHeight="22dp"
                        android:textColor="#000"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="60dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="회원 정보 입력"/>
                    <TextView
                        android:textSize="18sp"
                        android:textFontWeight="500"
                        android:lineHeight="22dp"
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="이름"/>
                    <EditText
                        android:id="@+id/name"
                        android:textColor="#000"
                        android:backgroundTint="#478C5C"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginBottom="40dp"
                        android:textColorHint="#cccccc"
                        android:hint="ex) 홍길동"
                        android:drawablePadding="20dp"
                        android:textFontWeight="700"
                        android:textSize="20sp"
                        android:paddingLeft="15dp"/>
                    <TextView
                        android:textSize="18sp"
                        android:textFontWeight="500"
                        android:lineHeight="22dp"
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="생년월일"/>

                    <EditText
                        android:id="@+id/birth"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginBottom="40dp"
                        android:backgroundTint="#478C5C"
                        android:drawablePadding="20dp"
                        android:textColorHint="#cccccc"
                        android:hint="ex) 000101"
                        android:paddingLeft="15dp"
                        android:textColor="#000"
                        android:textFontWeight="700"
                        android:textSize="20sp" />

                    <TextView
                        android:textSize="18sp"
                        android:textFontWeight="500"
                        android:lineHeight="22dp"
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="휴대폰 번호"/>
                    <EditText
                        android:id="@+id/phone"
                        android:textColor="#000"
                        android:backgroundTint="#478C5C"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginBottom="40dp"
                        android:hint="ex) 010-1234-5678"
                        android:textColorHint="#cccccc"
                        android:drawablePadding="20dp"
                        android:textFontWeight="700"
                        android:textSize="20sp"
                        android:paddingLeft="15dp"/>
                    <TextView
                        android:textSize="18sp"
                        android:textFontWeight="500"
                        android:lineHeight="22dp"
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="성별"/>
                    <LinearLayout
                        android:layout_marginBottom="80dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/man_btn"
                            android:layout_marginRight="24dp"
                            android:text="남성"
                            android:background="@drawable/signupbackground2"
                            android:gravity="center"
                            android:textColor="#478C5C"
                            android:layout_width="101dp"
                            android:layout_height="60dp"/>
                        <Button
                            android:id="@+id/woman_btn"
                            android:text="여성"
                            android:background="@drawable/signupbackground2"
                            android:gravity="center"
                            android:textColor="#478C5C"
                            android:layout_width="101dp"
                            android:layout_height="60dp"/>
                    </LinearLayout>

                </LinearLayout>
                <Button
                    android:id="@+id/moveSignUp"
                    android:background="#92CFA5"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textFontWeight="700"
                    android:textSize="20sp"
                    android:lineHeight="22sp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:text="다음"/>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>