<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/workout_detail_item_box">

    <TextView
        android:id="@+id/item_workout_detail_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:gravity="center"
        android:text="1st"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <EditText
        android:id="@+id/item_workout_detail_kg_et"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#478c5c"
        app:layout_constraintStart_toEndOf="@id/item_workout_detail_num_tv"
        app:layout_constraintEnd_toStartOf="@id/item_workout_detail_count_et"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/item_workout_detail_kg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="kg"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@id/item_workout_detail_kg_et"
        app:layout_constraintEnd_toEndOf="@id/item_workout_detail_kg_et"
        app:layout_constraintBottom_toBottomOf="@id/item_workout_detail_kg_et"/>

    <EditText
        android:id="@+id/item_workout_detail_count_et"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textAlignment="center"
        android:backgroundTint="#478c5c"
        android:layout_marginBottom="16dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/item_workout_detail_kg_et"
        app:layout_constraintEnd_toStartOf="@id/item_workout_detail_close"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/item_workout_detail_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="íšŒ"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@id/item_workout_detail_count_et"
        app:layout_constraintEnd_toEndOf="@id/item_workout_detail_count_et"
        app:layout_constraintBottom_toBottomOf="@id/item_workout_detail_count_et"/>

    <ImageView
        android:id="@+id/item_workout_detail_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/close_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>